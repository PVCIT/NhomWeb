@model EShop.Models.LogInModel
@{
    ViewBag.Title = "Log in";
    }
@Styles.Render("~/Content/DangNhapCss.css")
<h2>Please Log In</h2>
    <div id="products">
        @using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />
            <div class="container">
                @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", @placeholder = "Tên Đăng Nhập", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="container">
                @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Mật Khẩu", @type = "password" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="container">
                <button type="submit" class="btn-lg btn-success btn-block">Đăng Nhập</button>
            </div>

        }
    </div>
